package integration.pipelines.declarative

import org.apache.commons.io.FileUtils

import java.nio.file.Paths

node("TestSlave") {
    def serverId = "Artifactory-1"
    def buildName = "declarative:goCustomModuleName test"
    def buildNumber = "7"

    stage "Configure Artifactory"
    rtServer(
            id: serverId,
            url: "${env.JENKINS_ARTIFACTORY_URL}",
            username: "${env.JENKINS_ARTIFACTORY_USERNAME}",
            password: "${env.JENKINS_ARTIFACTORY_PASSWORD}"
    )

    stage "Configure Go build"
    rtGoDeployer(
            id: "GO_DEPLOYER",
            serverId: serverId,
            repo: "${GO_LOCAL}",
    )

    rtGoResolver(
            id: "GO_RESOLVER",
            serverId: serverId,
            repo: "${GO_VIRTUAL}",
    )

    stage "Copy project example"
    FileUtils.copyDirectory(Paths.get("${GO_PROJECT_PATH}").toFile(), Paths.get(pwd(), "declarative-go-example").toFile())

    stage "Go Build"
    rtGoRun(
            buildName: buildName,
            buildNumber: buildNumber,
            path: 'declarative-go-example',
            resolverId: "GO_RESOLVER",
            args: "build",
            module: "my-Go-module"
    )

    stage "Go Publish"
    rtGoPublish(
            buildName: buildName,
            buildNumber: buildNumber,
            path: 'declarative-go-example',
            deployerId: "GO_DEPLOYER",
            version: "1.0.0",
            module: "my-Go-module"
    )

    stage "Publish build info"
    rtPublishBuildInfo(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber
    )
}
