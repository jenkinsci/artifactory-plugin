package integration.pipelines.declarative

node {
    def serverId = "Artifactory-1"
    def buildName = "declarative:setProps test"
    def buildNumber = "3"

    stage "Configuration"
    rtServer(
            id: serverId,
            url: "${env.JENKINS_ARTIFACTORY_URL}",
            username: "${env.JENKINS_ARTIFACTORY_USERNAME}",
            password: "${env.JENKINS_ARTIFACTORY_PASSWORD}"
    )

    stage "Upload"
    // Upload all files in 'files' folder with props
    rtUpload(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber,
            spec: """{
              "files": [
                {
                  "pattern": "${FILES_DIR}",
                  "target": "${LOCAL_REPO1}/",
                  "props": "p1=v1;p2=v2",
                  "recursive": "false"
                }
             ]
            }"""
    )

    stage "Set Props"
    // Set property on one of the files (a.in)
    rtSetProps(
            serverId: serverId,
            spec: """{
                       "files": [
                        {
                            "pattern": "${LOCAL_REPO1}/a.in"
                        }
                       ]
                      }""",
            props: "new-property=yes"
    )

    stage "Download"
    // Download only files with the new property
    rtDownload(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber,
            spec: """{
              "files": [
                {
                  "pattern": "${LOCAL_REPO1}/*",
                  "target": "setProps-test/",
                  "props": "new-property=yes"
                }
             ]
            }"""
    )

    stage "Publish Build Info"
    rtPublishBuildInfo(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber
    )
}
