package integration.pipelines.declarative

import org.apache.commons.io.FileUtils

import java.nio.file.Paths

node("TestSlave") {
    def serverId = "Artifactory-1"
    def buildName = "declarative:conan test"
    def buildNumber = "${BUILD_NUMBER}"

    stage "Configure Artifactory"
    rtServer(
            id: serverId,
            url: "${env.JENKINS_PLATFORM_URL}".replaceFirst('/*$', '')+'/artifactory',
            username: "${env.JENKINS_PLATFORM_USERNAME}",
            password: "${env.JENKINS_PLATFORM_ADMIN_TOKEN}"
    )

    stage "Configure Conan Client"
    rtConanClient(
        id: "myConanClient"
    )

    rtConanRemote (
        name: "conanTestRemote",
        serverId: serverId,
        repo: "${CONAN_LOCAL}",
        clientId: "myConanClient"
    )

    stage "Copy project example"
    FileUtils.copyDirectory(Paths.get("${CONAN_PROJECT_PATH}").toFile(), Paths.get(pwd(), "declarative-conan-example").toFile())

    stage "Conan Install"
    rtConanRun(
        clientId: "myConanClient",
        command: "install ./declarative-conan-example --build missing",
        buildName: buildName,
        buildNumber: buildNumber
    )

    rtConanRun(
        clientId: "myConanClient",
        command: "upload fmt/8.0.1 --all -r conanTestRemote --confirm",
        buildName: buildName,
        buildNumber: buildNumber
    )

    stage "Publish build info"
    rtPublishBuildInfo(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber
    )
}
