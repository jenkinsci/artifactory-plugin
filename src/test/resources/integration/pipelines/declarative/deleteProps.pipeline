package integration.pipelines.declarative

node("TestSlave") {
    def serverId = "Artifactory-1"
    def buildName = "declarative:deleteProps test"
    def buildNumber = "3"

    stage "Configuration"
    rtServer(
            id: serverId,
            url: "${env.JENKINS_ARTIFACTORY_URL}",
            username: "${env.JENKINS_ARTIFACTORY_USERNAME}",
            password: "${env.JENKINS_ARTIFACTORY_PASSWORD}"
    )

    stage "Upload"
    // Upload all files in 'files' folder with props
    rtUpload(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber,
            spec: """{
              "files": [
                {
                  "pattern": "${FILES_DIR}",
                  "target": "${LOCAL_REPO1}/",
                  "props": "p1=v1;p2=v2",
                  "recursive": "false"
                }
             ]
            }"""
    )

    stage "Delete Props"
    // Delete the properties on one of the files (a.in)
    rtDeleteProps(
            serverId: serverId,
            spec: """{
                       "files": [
                        {
                            "pattern": "${LOCAL_REPO1}/a.in"
                          }
                       ]
                      }""",
            props: "p1,p2"
    )

    stage "Download"
    // Download files with the original properties
    rtDownload(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber,
            spec: """{
              "files": [
                {
                  "pattern": "${LOCAL_REPO1}/*",
                  "target": "deleteProps-test/",
                  "props": "p1=v1;p2=v2"
                }
             ]
            }"""
    )

    stage "Publish Build Info"
    rtPublishBuildInfo(
            serverId: serverId,
            buildName: buildName,
            buildNumber: buildNumber
    )
}
